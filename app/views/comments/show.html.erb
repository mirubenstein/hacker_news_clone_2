<div class="page-header">
  <h1>Comment Details</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <div id="comment_detail">
      <p>Description: <%=@comment.text%></p>
      <p>Created <%=@comment.created_at%></p>
    </div>
    <%= link_to "Edit", edit_link_comment_path(@comment, @link), :class => "btn-small btn-primary" %>
    <%= link_to "Delete", link_comment_path(@comment, @link), :data => {:confirm => "Are you sure?", :method => "delete"}, :class => "btn-small btn-danger" %>
  </div>

<div id="comment">
  <br>
    <%=render 'comments/comment_form'%>
  </div>
